<article class="product-card">
  <div class="flex-ai-center jc-between">
    <div class="flex-1">
      <a href="#">
        <% if (announcement.priority === "High") { %>
          <p class="content red"><%= announcement.content %></p>
        <% } else if (announcement.priority==="Medium" ) { %>
          <p class="content orange"><%= announcement.content %></p>
        <% } else { %>
          <p class="content"><%= announcement.content %></p>
        <% } %>
        <div class="flex-ai-center m-top-5">
          <p class="user"><%= announcement.user.username %></p>
          <p class="date m-left-10"><%= announcement.datePosted %></p>
        </div>
      </a>
    </div>
    <div>
      <button class="delete-announcement-button" value="<%= announcement._id %>">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24">
          <g fill="none" fill-rule="evenodd">
            <path d="M0 0h24v24H0z"></path>
            <rect width="14" height="1" x="5" y="6" fill="grey" rx=".5"></rect>
            <path fill="grey" d="M10 9h1v8h-1V9zm3 0h1v8h-1V9z"></path>
            <path stroke="grey"
              d="M17.5 6.5h-11V18A1.5 1.5 0 0 0 8 19.5h8a1.5 1.5 0 0 0 1.5-1.5V6.5zm-9 0h7V5A1.5 1.5 0 0 0 14 3.5h-4A1.5 1.5 0 0 0 8.5 5v1.5z">
            </path>
          </g>
        </svg>
      </button>
    </div>
  </div>
  </a>
</article>